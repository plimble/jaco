{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es2020",
    "module": "ES2020",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@onedaycat/jaco-common": ["packages/common/src/index.ts"],
      "@onedaycat/jaco-core": ["packages/core/src/index.ts"],
      "@onedaycat/jaco-http": ["packages/http/src/index.ts"],
      "@onedaycat/jaco-testing": ["packages/testing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
